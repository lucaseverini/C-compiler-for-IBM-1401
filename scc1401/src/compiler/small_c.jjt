void FunctionDefinition() : {}
{
    (Type())? Identifier()
	{

			st.push();
			SymTab s = st.push();

			SymTabEntry e = SymTabFactory.createSymTabEntry(token.image, s);
			e.setAttribute(SymTabKeyImpl.ROUTINE_SYMTAB, s);
			e.setDefinition(DefinitionImpl.FUNCTION);
			((ArrayList<SymTabEntry>)programId.getAttribute(SymTabKeyImpl.ROUTINE_ROUTINES)).add(e);

	}
		(("(" (FunctionDefinitionParameter() ("," FunctionDefinitionParameter())*)? ")" ) #ParameterList)
        ("{" (LocalVariableDeclaration())* (Statement())* "}"
		{
			st.pop();
		}
		) #FunctionBody

	{
    	jjtThis.setName(token.image);
    	jjtThis.setKind(token.kind);
    	jjtThis.setCol(token.beginLine);
    	jjtThis.setRow(token.beginColumn);
	}
}

