String handleError(ParseException ex) #void
{
	Token token = ex.currentToken;
	System.out.println(ex.getMessage());

	do {
		token = getNextToken();
	} while (token.kind != SEMI_COLON);

	jjtree.popNode();
	return token.image;
}
