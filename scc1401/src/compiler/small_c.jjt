void VariableInitializer() #void :{}
{
	SuffixedVariable() ("=" AssignmentExpression() #Initializer(2))?
}

void SuffixedVariable() #void : {}
{
	PrefixedVariable() "[" (Expression()) "]" #ArrayDeclaration(2)
	| PrefixedVariable() "[" "]" #ArrayDeclaration(1)
	| PrefixedVariable()
}

void PrefixedVariable() #void :{}
{
	Identifier()
	{
		SymTabEntry variableId;
		if (!global) {
			variableId = st.enterLocal(token.image);
		} else {
			SymTab s = st.getGlobalSymTab();
			variableId = s.enter(token.image);
		}
		global = false;
		variableId.setDefinition(DefinitionImpl.VARIABLE);
		variableId.setTypeSpec(Predefined.undefinedType);
		if (type.equals("int"))
		{
			variableId.setTypeSpec(Predefined.integerType);
		} else if (type.equals("char")) {
			variableId.setTypeSpec(Predefined.charType);
			type = "int";
		}
	}
	| "*" PrefixedVariable() #PointerDeclaration(1)
}


